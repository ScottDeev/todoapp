{
  "version": 2,
  "builds": [
    { "src": "backend/package.json", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "src": "/[^.]+", "dest": "frontend/", "status": 200 }
  ]
}
